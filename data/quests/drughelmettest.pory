script Quest_DrugHelmetTest_Script_PostThirdTestBattle
{
    lockall
    faceplayer
    special(HealPlayerParty)
    special(LoadPlayerParty)
    if(defeated(TRAINER_DRUGHELMETTESTER_3))
    {
        msgbox(format("Nailed it!"),MSGBOX_DEFAULT,SPEAKER_DRUG_HELMET_TESTER)
        questmenu(QUEST_MENU_SET_REWARD,QUEST_DRUGHELMETTEST)
        msgbox(format("That was perfect! You did great. How do you feel?"),MSGBOX_DEFAULT,SPEAKER_DRUG_HELMET_TESTER)
        msgbox(format("I’ve been better. I’ll be fine."),MSGBOX_DEFAULT,SPEAKER_ALICIA)
        goto(Quest_DrugHelmetTest_Script_RewardQuest)
    }
    else
    {
        msgbox(format("Did I overload your circuit or the helmet’s?"),MSGBOX_AUTOCLOSE,SPEAKER_DRUG_HELMET_TESTER)
    }
    releaseall
    end
}

