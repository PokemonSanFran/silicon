script Vsdeoxys_Script_HideVsdeoguy_Gldngtepark
{
    if(var(VAR_QUEST_VSDEOXYS)!= VSDEOGUY_LEFT_ROUTE)
    {
        setflag(FLAG_HIDE_VSDEOGUY_RESEARCH)
    }
}

script Vsdeoxys_Script_HideObjectRoute
{
    call_if_quest_not_active(QUEST_VSDEOXYS,Vsdeoxys_Script_HideVsdeoguyMinior)

    if(var(VAR_QUEST_VSDEOXYS) > VSDEOGUY_INTERACTED)
    {
        call(Vsdeoxys_Script_HideVsdeoguyMinior)
    }
}

script Vsdeoxys_Script_HideVsdeoguyMinior
{
    setflag(FLAG_HIDE_MINIOR_ROCK)
    setflag(FLAG_HIDE_VSDEOGUY)
}


script Vsdeoxys_Script_InteractVsdeoguy
{
    lockall
    faceplayer
    if(var(VAR_QUEST_VSDEOXYS) == VSDEOGUY_NOT_INTERACTED)
    {
        call(Vsdeoxys_Dialogue_FirstInteractVsdeoguy)
    }
    else
    {
        msgbox(format("That orange Pokémon is hiding in one of these rocks! Capture it."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEOGUY)
    }
    releaseall
    end
}

script Vsdeoxys_Dialogue_FirstInteractVsdeoguy
{
    setvar(VAR_QUEST_VSDEOXYS, VSDEOGUY_INTERACTED)
    msgbox(format("Did you send a zap -"),MSGBOX_DEFAULT,SPEAKER_ALICIA)
    msgbox(format("Yes! It was here! We have to capture it. Can you capture it? You look like you can capture it."),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
msgbox(format("Okay, slow down. What happened?"),MSGBOX_DEFAULT,SPEAKER_ALICIA,TAIL_DEFAULT,EMOTE_CONFUSE,PHONE_OFF)
    msgbox(format("I was smashing these meteors, right?"),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
    msgbox(format("And then the next thing I remember, an orange thing flew by me super fast, and blasted me with some kind of… Ancient Power! "),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY,TAIL_DEFAULT,EMOTE_SHOCK,PHONE_OFF)
    msgbox(format("My Trumbeak was KO’d in one hit! \nThen it zoomed away!"),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
    msgbox(format("Wait, so why did your zap say -"),MSGBOX_DEFAULT,SPEAKER_ALICIA)
    msgbox(format("It wasn't just any Pokémon! Meteors are from space? An orange super strong Pokémon? It was Deoxys!"),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY,TAIL_DEFAULT,EMOTE_SHOCK,PHONE_OFF)
    msgbox(format("What is..."),MSGBOX_DEFAULT,SPEAKER_ALICIA,TAIL_DEFAULT,EMOTE_CONFUSE,PHONE_OFF)
    msgbox(format("It's a Pokémon the government doesn't want you to know about, but we know the Hoenn Champion captured one back in 1997. They keep it locked up at a research facility because it's too powerful to let the public know about it. It must've escaped!"),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
    msgbox(format("And you think it's here?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)
    msgbox(format("I know it's here! I saw it! But I'm not tough enough.\nSo you’re gonna capture it!"),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
    msgbox(format("We’re gonna bring it to the Halbera Research Facility. Not Chasilla. Those guys are in the pocket of big government.\nI - we’re gonna be so famous!"),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
    msgbox(format("What have I gotten myself into?"),MSGBOX_DEFAULT,SPEAKER_ALICIA,TAIL_THOUGHT,EMOTE_DEFAULT,PHONE_OFF)
    msgbox(format("Sure. What were you using to smash these rocks?"),MSGBOX_DEFAULT,SPEAKER_ALICIA,TAIL_DEFAULT,EMOTE_SWEAT,PHONE_OFF)
    msgbox(format("Meteors! They’re from space. You can use this."),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
    giveitem(ITEM_TM192)
    msgbox(format("If you have a Pokémon in your party that can learn that move, you’ll be able to smash meteors.\nAnd rocks."),MSGBOX_DEFAULT,SPEAKER_VSDEOGUY)
    msgbox(format("Capture the Deoxys! Once you do, we’ll expose the lies!"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEOGUY)
}

script Vsdeoxys_Script_CheckIfCanRockSmash
{
    lockall
    checkitem(ITEM_TM192)
    if (!var(VAR_RESULT))
    {
        goto(Vsdeoxys_Dialogue_RockSmashFail)
        return
    }

    checkpartylearnknowsfieldmove(MOVE_ROCK_SMASH)
    if (var(VAR_RESULT) >= PARTY_SIZE)
    {
        goto(Vsdeoxys_Dialogue_RockSmashFail)
        return
    }

	setfieldeffectargument(0, VAR_RESULT)
	bufferpartymonnick(STR_VAR_1, VAR_RESULT)
	buffermovename(STR_VAR_2, MOVE_ROCK_SMASH)

    msgbox(Text_WantToSmash, MSGBOX_YESNO)
    if (var(VAR_RESULT) == YES)
    {
        msgbox(Text_MonUsedFieldMove, MSGBOX_DEFAULT)
        closemessage
        call(Vsdeoxys_Script_UseRockSmashMinior)
    }
    else
    {
        call(EventScript_CancelSmash)
    }
    end
}

script Vsdeoxys_Dialogue_RockSmashFail
{
    msgbox(Text_CantSmash,MSGBOX_DEFAULT)
    call(Vsdeoxys_Script_PlayCry)
    msgbox(format("…Did that rock just make a sound?"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA,TAIL_THOUGHT,EMOTE_DEFAULT,PHONE_OFF)
    releaseall
    end
}

script Vsdeoxys_Script_UseRockSmashMinior
{
    lockall
    dofieldeffect(FLDEFF_USE_ROCK_SMASH)
    waitstate
    goto(Vsdeoxys_Script_UseRockSmashMiniorMovement)
}

script Vsdeoxys_Script_UseRockSmashMiniorMovement
{
    applymovement(VAR_LAST_TALKED, Movement_SmashRock)
    waitmovement(0)
    removeobject(VAR_LAST_TALKED)
    call(Vsdeoxys_Script_CreateMiniorObject)
    releaseall
    end
}

script Vsdeoxys_Script_CreateMiniorObject
{
    createvobject(OBJ_EVENT_GFX_PIKACHU,MINIOR,9,0,3,DIR_SOUTH)
    call(Vsdeoxys_Script_Encounter)
}

script Vsdeoxys_Script_Encounter
{
    call(Vsdeoxys_Script_PlayCry)
    setflag(P_FLAG_FORCE_NO_SHINY)
    setwildbattle(SPECIES_MINIOR_CORE_ORANGE, 30, ITEM_NONE)
    //setwildbattle(species=SPECIES_MINIOR_CORE_ORANGE, level=30, item=ITEM_NONE,hpIv=31,atkIv=31,defIv=31,speedIv=31,spAtkIv=31, spDefIv=31)
    setflag(FLAG_SYS_CTRL_OBJ_DELETE)
    dowildbattle
    clearflag(FLAG_SYS_CTRL_OBJ_DELETE)
    clearflag(P_FLAG_FORCE_NO_SHINY)

    specialvar(VAR_RESULT, GetBattleOutcome)
    if (var(VAR_RESULT) == B_OUTCOME_CAUGHT)
    {
        removeobject(VSDEOGUY)
        goto(Vsdeoxys_Script_CaughtMinior)
    }
    else
    {
        goto(Vsdeoxys_Dialogue_ReturnToOverworldWithoutCapturingMinior)
    }
}

script Vsdeoxys_Script_PlayCry
{
    waitse
    playmoncry(SPECIES_MINIOR,CRY_MODE_NORMAL)
    delay(40)
    waitmoncry
}

script Vsdeoxys_Dialogue_ReturnToOverworldWithoutCapturingMinior
{
    removeobject(MINIOR)
    msgbox(format("Wait… is that what they were talking about?"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA,TAIL_THOUGHT,EMOTE_DEFAULT,PHONE_OFF)
    end
}


script Vsdeoxys_Script_CaughtMinior
{
    removeobject(MINIOR)
    setvar(VAR_QUEST_VSDEOXYS, VSDEOGUY_LEFT_ROUTE)
    call(Vsdeoxys_Script_ReturnToOverworldAfterCapturingMinior)
}

script Vsdeoxys_Script_ReturnToOverworldAfterCapturingMinior
{
    msgbox(format("You did it!"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEOGUY)
    waitmessage
    call(Vsdeoxys_Script_RunToPlayerAfterMiniorCatch)
    msgbox(format("You caught it!\nWe’ve got proof now!\nMeet me at Haelba Research!"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEOGUY)
    applymovement(VSDEOGUY,Vsdeoxys_Movement_VsdeoguyRunOnScreen)
    waitmovement(VSDEOGUY)
    removeobject(VSDEOGUY)
    releaseall
}

script Vsdeoxys_Script_RunToPlayerAfterMiniorCatch
{
    setobjectxyperm(VSDEOGUY, 17, 1)
    waitmovement(VSDEOGUY)
    addobject(VSDEOGUY)
    lockall
    specialvar(VAR_RESULT,GetPlayerFacingDirection)

    switch (var(VAR_RESULT))
    {
    case DIR_NORTH:
        applymovement(VSDEOGUY,Vsdeoxys_Movement_Vsdeoguy_RunToPlayerFacingNorth)
        waitmovement(VSDEOGUY)
        applymovement(PLAYER,Vsdeoxys_Movement_Player_TurnRightToFaceVsdeoguy)
        break
    case DIR_WEST:
        applymovement(VSDEOGUY,Vsdeoxys_Movement_Vsdeoguy_RunToPlayerFacingNorth)
        waitmovement(VSDEOGUY)
        applymovement(PLAYER,Common_Movement_FaceDown)
        break
    case DIR_EAST:
        applymovement(VSDEOGUY,Vsdeoxys_Movement_Vsdeoguy_RunToPlayerFacingEast)
        waitmovement(VSDEOGUY)
        applymovement(PLAYER,Common_Movement_FaceDown)
        break
    }
}

script Vsdeoxys_Script_VsdeoguyEnterResearch
{
    setvar(VAR_QUEST_VSDEOXYS, VSDEOGUY_ENTERED_RESEARCH)
    faceplayer
    msgbox(format("You’re here! Okay. Let’s go. I’ll do the talking."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEOGUY)
    waitmessage
    opendoor(39,8)
    waitdooranim
    applymovement(VSDEOGUY_GDLNGTEPARTK,Common_Movement_FaceUp)
    waitmovement(VSDEOGUY_GDLNGTEPARTK)
    playse(SE_EXIT)
    removeobject(VSDEOGUY_GDLNGTEPARTK)
    closedoor(39,8)
}

script Vsdeoxys_Script_SetUpResearchObjects
{
    if (var(VAR_QUEST_VSDEOXYS) == VSDEOGUY_ENTERED_RESEARCH)
    {
        spawnobject(graphicsId=OBJ_EVENT_GFX_BOY_3,localId=VSDEOGUY_HALERBARESEARCH,x=9,y=10,movementType=MOVEMENT_TYPE_FACE_LEFT, elevation=3)
        turnobject(VSDEORESEARCHER,DIR_EAST)
    }
    return
}

script Vsdeoxys_Dialogue_DiscussMiniorResearch
{
    setvar(VAR_QUEST_VSDEOXYS,VSDEOGUY_LEFT_RESEARCH)
    msgbox(format("Vsdeoguy, for the 385th time, there’s no way -"), MSGBOX_AUTOCLOSE, SPEAKER_VSDEORESEARCHER)
    closemessage
    applymovement(PLAYER,Common_Movement_WalkUp)
    waitmovement(PLAYER)
    msgbox(format("This time it's real! I have proof. We caught it. You gotta see it for yourself."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEOGUY)
    msgbox(format("See what? That you -"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherWalkToPlayer)
    waitmovement(VSDEORESEARCHER)
    applymovement(PLAYER,Common_Movement_FaceLeft)
    msgbox(format("Are you {PLAYER}? I’ve seen the livestreams for the League. How did Deoxysg- "),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    msgbox(format("That’s how I know it’s legit! This Trainer is tough as nails, saw it with my own eyes!"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEOGUY)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherTurnUpAndDown)
    waitmovement(VSDEORESEARCHER)
    msgbox(format("Okay! Let’s take a look at your Pokédex. Come with me."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    applymovement(VSDEORESEARCHER,Common_Movement_WalkUp)
    waitmovement(VSDEORESEARCHER)
    applymovement(PLAYER,Vsdeoxys_Movement_PlayerAlignWithVsdeoguy)
    waitmovement(PLAYER)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherWalkToBackOfRoom)
    applymovement(VSDEOGUY_HALERBARESEARCH,Vsdeoxys_Movement_VsdeoguyWalkToBackOfRoom)
    applymovement(PLAYER,Vsdeoxys_Movement_PlayerWalkToBackOfRoom)
    waitmovement(PLAYER)
    msgbox(format("You know how my bosses are. I can’t have too many people in the lab. I’ll come back in a second."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherWalkTowardsComputer)
    applymovement(PLAYER,Vsdeoxys_Movement_PlayerWalkTowardsComputer)
    waitmovement(PLAYER)
    msgbox(format("Okay, I battled this -"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA)
    msgbox(format("Trust me, I know. They told you it was a Deoxys escaped from Hoenn or something, didn't they?"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
msgbox(format("How did you know?"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA,TAIL_DEFAULT,EMOTE_SHOCK,PHONE_OFF)
    msgbox(format("I see that person once… maybe twice a month. They usually trick some Trainer into helping them, but this is the first time he’s actually brought back something and it didn’t have a blurry photo…"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    msgbox(format("How did they trick you into helping them? All of the Trainers that could capture this thing are usually off doing literally anything else."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
msgbox(format("I was invest -"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA)
    msgbox(format("You know what? Doesn’t matter. But I can’t have this guy bursting into here every month with some nonsense. So I need you to just stay here, and I think we can get them out of our hair once and for all."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherWalkToVsdeoguy)
    waitmovement(VSDEORESEARCHER)
    applymovement(VSDEOGUY_HALERBARESEARCH,Common_Movement_FaceRight)
    waitmovement(VSDEOGUY_HALERBARESEARCH)
    applymovement(VSDEOGUY_HALERBARESEARCH,Vsdeoxys_Script_VsdeoguyRunOffScreen)
    waitmovement(VSDEOGUY_HALERBARESEARCH)
    removeobject(VSDEOGUY_HALERBARESEARCH)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherWalkRightToPlayer)
    applymovement(PLAYER,Vsdeoxys_Movement_PlayerWalkToVsdeoresearcher)
    waitmovement(PLAYER)
msgbox(format("…what happened?"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA,TAIL_DEFAULT,EMOTE_CONFUSE,PHONE_OFF)
    msgbox(format("I told him that I thought you were a government spy, here to retrieve what was rightfully yours."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
msgbox(format("Wait what?"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA,TAIL_DEFAULT,EMOTE_SHOCK,PHONE_OFF)
    msgbox(format("Yeah, you should have seen it! I said that we had defense protocols to handle you, but we could only hold you off for so long."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER,TAIL_DEFAULT,EMOTE_LAUGH,PHONE_OFF)
    msgbox(format("I told them they were absolutely onto something, you had the real deal, but they needed to delete Buzzr from their phone and told them they needed the first ticket to Fiore, where nobody could track them down."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    msgbox(format("Wait, he’s just abandoning everything and leaving?"),MSGBOX_AUTOCLOSE,SPEAKER_ALICIA)
    msgbox(format("They’ve got nothing to leave behind, I promise. They’ve got no life outside of hunting this thing. Man, I’m so glad that’s over!"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherWalkOffScreen)
    waitmovement(VSDEORESEARCHER)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherComesBack)
    waitmovement(VSDEORESEARCHER)
    msgbox(format("Seriously, you have no idea how much time and energy you’ve saved us. Thank you so much for playing along."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    msgbox(format("You were smashing those meteors using your Pokémon,right? You can use this instead."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    giveitem(ITEM_ROCKSMASH_TOOL)
    call(Vsdeoxys_Script_BufferDescribeRockSmashTool)
    applymovement(VSDEORESEARCHER,Vsdeoxys_Movement_VsdeoresearcherWalkToTheirComputer)
    waitmovement(VSDEORESEARCHER)
    call(Vsdeoxys_Script_QuestComplete)
    end
}

script Vsdeoxys_Dialogue_PostQuestDescribeTool
{
    faceplayer
    msgbox(format("Seriously, you have no idea how much time and energy you’ve saved us. Thank you so much for playing along."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    call(Vsdeoxys_Script_BufferDescribeRockSmashTool)
}

script Vsdeoxys_Script_BufferDescribeRockSmashTool
{
    bufferitemname(STR_VAR_1,ITEM_ROCKSMASH_TOOL)
    msgbox(format("You can use that {STR_VAR_1} to crush any rocks you come across. You don’t need any particular Pokémon with you."),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
}

script Vsdeoxys_Script_QuestComplete
{
    completequest(QUEST_VSDEOXYS)
    call_if_quest_not_active(QUEST_BREAKTHEINTERNET,Quest_Breaktheinternet_CountQuestsAndProgress_Script)
    end
}

script Vsdeoxys_Dialogue_VsdeoresearcherInteract
{
    lockall
    questmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_VSDEOXYS)
    if (!var(VAR_RESULT))
    {
        msgbox(format("Another late night… but once I finally have the data on Core distribution and its relationship to personality value…"),MSGBOX_AUTOCLOSE,SPEAKER_VSDEORESEARCHER)
    }
    else
    {
        call(Vsdeoxys_Dialogue_PostQuestDescribeTool)
    }
    releaseall
    end
}

