		case VAR_CUTE_POKEMON_SCRAFTY_HINT_1:
            msgbox(format("Hey, {PLAYER}, did you come across a cute Pokémon that can breed with dragons and learn the move {STR_VAR_1}?"),,SPEAKER_MELISSA)
		case VAR_CUTE_POKEMON_SCRAFTY_HINT_2:
            msgbox(format("Hey, {PLAYER}, did you come across a cute Pokémon that can breed with dragons and learn the move {STR_VAR_1} that basically has a mohawk?"),,SPEAKER_MELISSA)
	}

	checkitemspace(ITEM_QUEST_CUTEPOKEMON_2,1)
		if (var(VAR_RESULT) == NO)
		{
			call(CutePokemon_Dialogue_CheckItemSpace)
		}

	call(CutePokemon_Script_SelectOptionCheckPokemon)
	call(CutePokemon_Script_HalaiCheck)
	closemessage
	release
	end
}

script CutePokemon_Script_HalaiCheck
{
    buffermovename(STR_VAR_1,MOVE_ACID_SPRAY)
	switch(var(VAR_TEMP_0))
	{
		case VAR_CUTE_POKEMON_SCRAFTY_HINT_0:
			msgbox(format("Dude, did you even read the Pokédex entry?"),,SPEAKER_MELISSA)
		case VAR_CUTE_POKEMON_SCRAFTY_HINT_1:
			msgbox(format("While this Pokémon is cute and can breed with dragons, the Pokémon I had in mind can learn the move {STR_VAR_1}."),,SPEAKER_MELISSA)
		case VAR_CUTE_POKEMON_SCRAFTY_HINT_2:
			msgbox(format("Oh, I forgot about this one. The cute Pokémon I had in mind has a mohawk. Or looks like it has a mohawk…? I don’t know."),,SPEAKER_MELISSA)
		default: goto(CutePokemon_Script_HalaiAsk)
	}
	return
}

script CutePokemon_Script_HalaiAsk
{
	special(BufferMonNickname)
	askplayermon(format("That’s it! Thank you for finding that Pokémon! You saved me hella time. Are you sure I can have {STR_VAR_1}?"),CutePokemon_Text_CanYouBringOne,CutePokemon_Text_AwwThatsSweet,SPEAKER_MELISSA)

	subquestmenu(QUEST_MENU_COMPLETE_QUEST,QUEST_CUTEPOKEMON,SUB_QUEST_4)
	setvar(VAR_CUTE_POKEMON_GUESS,VAR_CUTE_POKEMON_CORRECT)
	msgbox(format("Hell yeah! Thanks for being a real one and helping me find all these Pokémon. Take this, I made this myself on break!"),,SPEAKER_MELISSA)
	closemessage
	cueobjectplayer(MELISSA_QIU_OUTSIDE)
	giveitem(ITEM_QUEST_CUTEPOKEMON_2,1)
	completequest(QUEST_CUTEPOKEMON)
    setvar(VAR_CUTE_POKEMON_GUESS,VAR_CUTE_POKEMON_REMATCH_COMPLETE)
	release
	end
}

script CutePokemon_Dialogue_Rematch
{
	if(var(VAR_CUTE_POKEMON_GUESS) != VAR_CUTE_POKEMON_REMATCH_COMPLETE)
	{
		msgbox(format("Hey {PLAYER}. Thanks again for helping me catch those cute Pokémon. Do you have time to battle?"),,SPEAKER_MELISSA)
		closemessage
		trainerbattle_no_intro(TRAINER_MELISSA_REMATCH,CutePokemon_Text_INeedToTrain)
		//PSF TODO need battle slide for every loss "Honestly? I’m surprised."
		setvar(VAR_CUTE_POKEMON_GUESS,VAR_CUTE_POKEMON_REMATCH_COMPLETE)
	}

	msgbox(format("Wanna grab some post battle boba?"),,SPEAKER_MELISSA)
	closemessage
	release
	end
}

