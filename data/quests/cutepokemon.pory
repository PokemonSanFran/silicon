script CutePokemon_Script_PerlaciaSelectDialogue
{
	lock
	faceplayer
	goto_if_quest_inactive(QUEST_CUTEPOKEMON,CutePokemon_Dialogue_FirstInteraction)
	goto_if_subquest_complete(QUEST_CUTEPOKEMON,SUB_QUEST_1,CutePokemon_Dialogue_SubquestComplete)
	goto(CutePokemon_Dialogue_PerlaciaGuess)
}

script CutePokemon_Dialogue_FirstInteraction
{
	addvar(QUEST_CUTEPOKEMON,1)
	msgbox(format("Hey, are you free? I’m about to run to my next shift across Resido. Do you have time to help me find a cute Pokémon? I keep picking up shifts, because everybody’s burnt out."),,SPEAKER_MELISSA)

		dynmultichoice(
				1,1,TRUE,2,0,NULL,
				CutePokemon_Text_YeahSure,
				CutePokemon_Text_YeahIGuess
				)

	startquest(QUEST_CUTEPOKEMON)
	goto(CutePokemon_Dialogue_PerlaciaGuess)
}

script CutePokemon_Script_SelectOptionCheckPokemon
{
	dynmultichoice(
			1,1,FALSE,2,1,NULL,
			CutePokemon_Text_OkayBye,
			CutePokemon_Text_IHaveYourPokemon,
			)

	if (var(VAR_RESULT) != YES)
	{
		closemessage
		release
		end
	}
	msgbox(format("That was fast! Show me!"),MSGBOX_NPC,SPEAKER_MELISSA)

	special(ChoosePartyMon)
	waitstate

	if (var(VAR_0x8004) == PARTY_NOTHING_CHOSEN)
	{
		msgbox(format("Oh, you don’t have a Pokémon? Do you want to order a boba drink instead?"),,SPEAKER_MELISSA)
		closemessage
		release
		end
	}

	callnative(CheckCutePokemonAndSetHint)
}

script CutePokemon_Dialogue_PerlaciaGuess
{
	lock
	faceplayer
	callnative(BufferEiscueHeightPlusOne)

	switch(var(VAR_CUTE_POKEMON_GUESS))
	{
	default:
		case VAR_CUTE_POKEMON_EISCUE_HINT_0:
			msgbox(format("I’ve been looking for this cute Pokémon. It’s an Ice-type. Can you catch one for me? But only if you have time. You can say no!"),,SPEAKER_MELISSA)
		case VAR_CUTE_POKEMON_EISCUE_HINT_1:
			msgbox(format("Bring the cute Ice-type Pokémon that’s shorter than {STR_VAR_1}. I’ve gotta go back to work!"),,SPEAKER_MELISSA)
		case VAR_CUTE_POKEMON_EISCUE_HINT_2:
			msgbox(format("Bring the cute Ice-type Pokémon that’s shorter than {STR_VAR_1} and is trapped in its own head. I’ve gotta go back to work!"),,SPEAKER_MELISSA)
	}

	call(CutePokemon_Script_SelectOptionCheckPokemon)
	call(CutePokemon_Script_PerlaciaCheck)
	closemessage
	release
	end
}

script CutePokemon_Script_PerlaciaCheck
{
	callnative(BufferEiscueHeightPlusOne)
	switch(var(VAR_TEMP_0))
	{
		case VAR_CUTE_POKEMON_EISCUE_HINT_0:
			msgbox(format("This is fine… but it's not an Ice-type like I asked for."),,SPEAKER_MELISSA)
		case VAR_CUTE_POKEMON_EISCUE_HINT_1:
			msgbox(format("Oh! This is a cute Pokémon! But the one I have in mind is shorter than {STR_VAR_1}."),,SPEAKER_MELISSA)
		case VAR_CUTE_POKEMON_EISCUE_HINT_2:
			msgbox(format("Oh! This is a cute Pokémon! But the one I have in mind feels trapped in its own head."),,SPEAKER_MELISSA)
		default: goto(CutePokemon_Script_PerlaciaAsk)
	}
	return
}

script CutePokemon_Script_PerlaciaAsk
{
	askplayermon(format("That’s it! Thank you for finding that Pokémon! You saved me hella time. Are you sure I can have your {STR_VAR_1}?"),CutePokemon_Text_CanYouBringOne,CutePokemon_Text_AwwThatsSweet,SPEAKER_MELISSA)
	subquestmenu(QUEST_MENU_COMPLETE_QUEST,QUEST_CUTEPOKEMON,SUB_QUEST_1)
	setvar(VAR_CUTE_POKEMON_GUESS,VAR_CUTE_POKEMON_EISCUE_HINT_2)
	msgbox(format("Hell yeah! I knew you’d be a real one!"),,SPEAKER_MELISSA)
	closemessage
	release
	end
}

