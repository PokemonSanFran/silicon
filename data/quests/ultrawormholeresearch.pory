    return
}

script Quest_Ultrawormholeresearch_Preventvoid_Script
{
    lock
    msgbox(format("I wouldn't go in there right now if I was you."),,SPEAKER_MADRONE)
    closemessage
    applymovement(PLAYER,Common_Movement_WalkDown)
    waitmovement(PLAYER)
    msgbox(format("I don't think you used the computer to set a warp location... if you walk up those stairs now, you're probably going to be warped into the endless void. Forever."),,SPEAKER_MADRONE)
    closemessage
    release
    end
}

