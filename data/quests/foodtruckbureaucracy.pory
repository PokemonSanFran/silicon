script Quest_Foodtruckbureaucracy_Food_WaitingForFix_Dialogue{
    msgbox(format("You hear anything from that Sanitation Department?"),MSGBOX_NPC,SPEAKER_WAITE)
    end
}

script Quest_Foodtruckbureaucracy_Food_AgreedToDeal_Dialogue{
    setvar(VAR_QUEST_FOOD_TRUCK_BUREAUCRACY_STATE,TRANSPORT_FROM_FOOD)
    msgbox(format("You hear anything from that Sanitation Department?"),MSGBOX_NPC,SPEAKER_WAITE)
    msgbox(format("It's a long story, but..."),,SPEAKER_ALICIA,EMOTE_SWEAT)
    msgbox(format("Hmm. Food to the Department of Transportation every Tuesday, and that means I get my code updated? It's a little pricey, but its less expensive than having to close up shop... okay, you've got a deal."),,SPEAKER_WAITE)
    msgbox(format("Okay, I need to go back and finalize things. I'll be back!"),,SPEAKER_ALICIA)
    closemessage
    end
}

script Quest_Foodtruckbureaucracy_Food_RestateDeal_Dialogue{
    msgbox(format("I agreed to the catering deal, when's my code getting updated?"),MSGBOX_NPC,SPEAKER_WAITE)
    end
}

script Quest_Foodtruckbureaucracy_Sani_StateProblem_Dialogue{
    setvar(VAR_QUEST_FOOD_TRUCK_BUREAUCRACY_STATE,TALKED_TO_SANITATION)
    msgbox(format("Hey, is it really a nine month wait for a restaurant to get its code updated?"),MSGBOX_NPC,SPEAKER_ALICIA)
    msgbox(format("Yep!"),,SPEAKER_DEBRA)
    msgbox(format("Of course, if we had a faster wireless router, maybe we could get through the queue at a quicker pace. I wonder if Information Technology in IrisinaTown could help..."),,SPEAKER_DEBRA)
    closemessage
    end
}

script Quest_Foodtruckbureaucracy_Sani_WaitingForFix_Dialogue{
    msgbox(format("Any luck on getting that new router from IT in IrisinaTown?"),MSGBOX_NPC,SPEAKER_DEBRA)
    end
}

script Quest_Foodtruckbureaucracy_Sani_AgreedToDeal_Dialogue{
    questmenu(QUEST_MENU_SET_REWARD,QUEST_FOODTRUCKBUREACRACY)
    setvar(VAR_QUEST_FOOD_TRUCK_BUREAUCRACY_STATE,DELIVERED_TO_SANITATION)
    msgbox(format("IT just came and installed the new router! You work quick. I'll send over somebody to do that restaurant inspection, ASAP."),MSGBOX_NPC,SPEAKER_DEBRA)
    end
}

script Quest_Foodtruckbureaucracy_Sani_RestateDeal_Dialogue{
    msgbox(format("Glad we could help you out. Let us know if you need anything else."),MSGBOX_NPC,SPEAKER_DEBRA)
    end
}

script Quest_Foodtruckbureaucracy_IT_StateProblem_Dialogue{
    setvar(VAR_QUEST_FOOD_TRUCK_BUREAUCRACY_STATE,TALKED_TO_IT)
    msgbox(format("Man, Sanitation has been chirping about that new router for years now. I told them, they gotta get the budget approved... but man, life would be so much easier is there was a trolley stop in front of this office. The Department of Transportation is in CapheCity, right?"),MSGBOX_NPC,SPEAKER_WALDRON)
    end
}

script Quest_Foodtruckbureaucracy_IT_AgreedToDeal_Dialogue{
    msgbox(format("Man, I'd love to get started on that new router, but I haven't heard anything from the Department of Transportation about that trolley stop. They're in the IrisinaTown, right?"),MSGBOX_NPC,SPEAKER_WALDRON)
    end
}

script Quest_Foodtruckbureaucracy_IT_WaitingForFix_Dialogue{
    setvar(VAR_QUEST_FOOD_TRUCK_BUREAUCRACY_STATE,DELIVERED_TO_IT)
    msgbox(format("We got a phone call asking about the dimensions of the sidewalk out front! Looks like you worked your magic. We'll have that router installed for your buddy over in PerlaciaCity's Sanitation Department."),MSGBOX_NPC,SPEAKER_WALDRON)
    end
}

script Quest_Foodtruckbureaucracy_IT_RestateDeal_Dialogue{
    msgbox(format("Great, we're happy we could help. Let us know if you need anything else."),MSGBOX_NPC,SPEAKER_WALDRON)
    end
}

script Quest_Foodtruckbureaucracy_DOT_StateProblem_Dialogue{
    setvar(VAR_QUEST_FOOD_TRUCK_BUREAUCRACY_STATE,TALKED_TO_TRANSPORTATION)
    msgbox(format("Hold on, IT wants a trolley stop in front of their door? That's going to take forever to get approved. You know, if we didn't have to leave to get food, maybe we'd have more time to work on that. You think you can figure out how to get us catering? Every Tuesday."),MSGBOX_NPC,SPEAKER_ISIDORE)
    end
}

script Quest_Foodtruckbureaucracy_DOT_WaitingForFix_Dialogue{
    msgbox(format("Any luck on that catering? I wish we could partner with some restaurant..."),MSGBOX_NPC,SPEAKER_ISIDORE)
    end
}

script Quest_Foodtruckbureaucracy_DOT_AgreedToDeal_Dialogue{
    setvar(VAR_QUEST_FOOD_TRUCK_BUREAUCRACY_STATE,DELIVERED_TO_TRANSPORATION)
    msgbox(format("Wait, you're serious? Every Tuesday? Oh man, I love that place! Okay, tell you what, I'll start drawing up the plans for that new trolley stop right away. Wow, you're the real deal!"),MSGBOX_NPC,SPEAKER_ISIDORE)
    end
}

script Quest_Foodtruckbureaucracy_DOT_RestateDeal_Dialogue{
    msgbox(format("Happy to help! Enjoy the new trolley stop."),MSGBOX_NPC,SPEAKER_ISIDORE)
    end
}


script Quest_Foodtruckbureaucracy_Reward_Dialogue{
    msgbox(format("You just missed them! Some inspector came through, looked around once, and just give me an A+! This is even better than I was hoping for, thanks a ton! Take this."),MSGBOX_NPC,SPEAKER_WAITE)
    giveitem(ITEM_BOX_OF_DISASTER)
    completequest(QUEST_FOODTRUCKBUREACRACY)
}

script Quest_Foodtruckbureaucracy_Completed_Dialogue{
    msgbox(format("{PLAYER}! You're always welcome here. Hungry?"),MSGBOX_NPC,SPEAKER_WAITE)
}

