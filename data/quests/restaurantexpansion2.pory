script Quest_Restaurantexpansion2_Leader_Interact_Script{
    goto_if_quest_reward(QUEST_RESTAURANTEXPANSION2,Quest_Restaurantexpansion2_Reward_Dialogue)
    goto_if_quest_active(QUEST_RESTAURANTEXPANSION2,Quest_Restaurantexpansion2_Active_Dialogue)
    goto(Quest_Restaurantexpansion2_StartQuest)
}

script Quest_Restaurantexpansion2_StartQuest{
    msgbox(format("{PLAYER}! Things have been coming together al dente!"),MSGBOX_NPC,SPEAKER_BELEN)
    msgbox(format("I think that's good. Awesome!"),,SPEAKER_ALICIA)
    msgbox(format("I think its time to elevate our offerings though."),,SPEAKER_BELEN)
    msgbox(format("I wasn't throughout enough in my remastering of our ethos - I can serve more people now, so now the people of the region can enjoy it... but is this food really the soul if its not made BY the people? I want tohire some people that are native to Resido, but I need help sourcing the components..."),,SPEAKER_BELEN)
    msgbox(format("Let me guess - you need me to send people from around the region who might have restaurant experience back to you?"),,SPEAKER_ALICIA)
    msgbox(format("You don't have to go back and forth this time!"),,SPEAKER_BELEN,,EMOTE_SWEAT)
    msgbox(format("And don't go out of your way either. If you battle or talk to somebody and they're from the restaurant industry, just send them to the back of house."),,SPEAKER_BELEN)
    startquest(QUEST_RESTAURANTEXPANSION2)
    end
}

