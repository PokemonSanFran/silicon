script Quest_Restaurantexpansion2_CheckReward_Script{
    setvar(VAR_TEMP_0,0)
        subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_RESTAURANTEXPANSION2, SUB_QUEST_1)
        if (var(VAR_RESULT))
        {
            addvar(VAR_TEMP_0,1)
        }

    subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_RESTAURANTEXPANSION2, SUB_QUEST_2)
        if (var(VAR_RESULT))
        {
            addvar(VAR_TEMP_0,1)
        }

    subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_RESTAURANTEXPANSION2, SUB_QUEST_3)
        if (var(VAR_RESULT))
        {
            addvar(VAR_TEMP_0,1)
        }

    subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_RESTAURANTEXPANSION2, SUB_QUEST_4)
        if (var(VAR_RESULT))
        {
            addvar(VAR_TEMP_0,1)
        }

    subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_RESTAURANTEXPANSION2, SUB_QUEST_5)
        if (var(VAR_RESULT))
        {
            addvar(VAR_TEMP_0,1)
        }

        if (var(VAR_TEMP_0) == 5){
            questmenu(QUEST_MENU_SET_REWARD, QUEST_RESTAURANTEXPANSION2)
        }
    return
}

script Quest_Restaurantexpansion2_Reward_Dialogue{
    msgbox(format("{PLAYER}, these new staff are so great! Thank you for your help!"),MSGBOX_NPC,SPEAKER_BELEN)
    msgbox(format("They really give my dish the acid that it needs to stand out!"),,SPEAKER_BELEN)
    msgbox(format("Take this for all your help."),,SPEAKER_BELEN)
    msgbox(format("If you're ever looking for a rematch, come see me at the Gym. I'd love to go all out against you!"),,SPEAKER_BELEN)
    closemessage
    applymovement(BELEN_MERMEREZA_CITY,Quest_Restaurantexpansion_WalkInside_Movement)
    setvar(VAR_BELEN_STATE,QUEST_2_COMPLETE)
       setflag(FLAG_FACILITY_UNLOCK_BELEN)
    completequest(QUEST_RESTAURANTEXPANSION2)
    fadescreen(FADE_TO_BLACK)
    removeobject(BELEN_MERMEREZA_CITY)
    fadescreen(FADE_FROM_BLACK)
    release
    end
}

script Quest_Restaurantexpansion2_Active_Dialogue{
    switch(var(VAR_RESULT)){
        case 0: msgbox(format("Have you had any luck finding people out there?"),MSGBOX_NPC,SPEAKER_BELEN)
        default: msgbox(format("I talked to a few people and they seem great. Keep up the seasoning!"),MSGBOX_NPC,SPEAKER_BELEN)
    }
    release
        end
}

