script Quest_Restaurantexpansion_FoodCold_Dialogue{
    checkitem(ITEM_TEA,1)
        if (var(VAR_RESULT)){
            msgbox(format("Okay, head to {STR_VAR_1}! The food is dying in the window, and I need delivery on the fly!"),MSGBOX_NPC,SPEAKER_BELEN,TAIL_SHOUT,EMOTE_ANGRY)
            closemessage
            release
            end
        }
