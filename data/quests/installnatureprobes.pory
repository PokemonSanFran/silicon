//Quest_InstallNatureProbes_

const PLAYER = OBJ_EVENT_ID_PLAYER
const LIIDIA = 2

script Quest_InstallNatureProbes_Interact_Liidia_Script
{
	lock
    call(Quest_InstallNatureProbes_CheckCompletionRate_Script)
	returnqueststate(QUEST_INSTALLNATUREPROBES)

	switch (var(VAR_RESULT))
	{
		case QUEST_MENU_SET_ACTIVE: goto(Quest_InstallNatureProbes_Active_Dialogue)
		case QUEST_MENU_SET_REWARD: goto(Quest_InstallNatureProbes_Reward_Cutscene)
		default: goto(Quest_InstallNatureProbes_StartQuest_Dialogue)
	}
}

script Quest_InstallNatureProbes_StartQuest_Dialogue
{
	msgbox(format("Geez, I gotta work late tonight if I'm going to finish these reports and the install...\pActually, you're a Trainer! Trainers are exploring places and shit, right?"), MSGBOX_NPC,SPEAKER_DEFAULT)
	msgbox(format("Can you help me with something? I don't think it'll put you too far out of your way. I need to install three probes in LeaverraForest for tracking Pokémon movement. One in the deepest part of the forest, one up on the tallest hill, and one over by the lakeshore. Installing is really easy, you just clip them to the sign posts that we've already got set up there."), MSGBOX_NPC,SPEAKER_DEFAULT)
	msgbox(format("You've got a PokéDex? Great. I can upgrade it with the Resido Habitat Mode if you help me out."), MSGBOX_NPC,SPEAKER_DEFAULT)

	startquest(QUEST_INSTALLNATUREPROBES)
	release
	end
}

script Quest_InstallNatureProbes_Active_Dialogue
{
    call(Quest_InstallNatureProbes_CheckCompletionRate_Script)
	msgbox(format("What probes did you already install in LeaverraForest?"),MSGBOX_NPC,SPEAKER_DEFAULT)

    if (var(VAR_TEMP_1) == 0){
        msgbox(format("One probe goes in the deepest part of the forest."),MSGBOX_NPC,SPEAKER_DEFAULT)
    }

    if (var(VAR_TEMP_2) == 0){
        msgbox(format("One probe goes on the tallest hill."),MSGBOX_NPC,SPEAKER_DEFAULT)
    }

    if (var(VAR_TEMP_3) == 0){
        msgbox(format("One probe goes by the lake shore."),MSGBOX_NPC,SPEAKER_DEFAULT)
    }
}

script Quest_InstallNatureProbes_InstallForestProbe_Script{
    lock

    subquestmenu(QUEST_MENU_CHECK_COMPLETE,QUEST_INSTALLNATUREPROBES,SUB_QUEST_1)
    if(var(VAR_RESULT)){
        msgbox(format("There is a probe attached to the sign post."),MSGBOX_SIGN)
        release
        end
    }

    msgbox(format("Yeah, this seems to match the description... deepest part of the forest."),,SPEAKER_ALICIA)


    subquestmenu(QUEST_MENU_COMPLETE_QUEST,QUEST_INSTALLNATUREPROBES,SUB_QUEST_1)
    call(Quest_InstallNatureProbes_CheckCompletionRate_Script)
    playse(SE_CONTEST_HEART)
    msgbox(format("{PLAYER} installed the probe in the forest."))
    waitse
    waitmessage

    release
    return
}
