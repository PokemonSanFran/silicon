script Quest_InstallNatureProbes_CheckCompletionRate_Script
{
    questmenu(QUEST_MENU_CHECK_ACTIVE, QUEST_INSTALLNATUREPROBES)

    if (!var(VAR_RESULT)){
        release
        return
    }

	setvar(VAR_TEMP_0, 0)
	setvar(VAR_TEMP_1, 0)
	setvar(VAR_TEMP_2, 0)
	setvar(VAR_TEMP_3, 0)

	subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_INSTALLNATUREPROBES, SUB_QUEST_1)
	if (var(VAR_RESULT))
	{
		addvar(VAR_TEMP_0, 1)
		addvar(VAR_TEMP_1, 1)
	}
	subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_INSTALLNATUREPROBES, SUB_QUEST_2)
	if (var(VAR_RESULT))
	{
		addvar(VAR_TEMP_0, 1)
		addvar(VAR_TEMP_2, 1)
	}
	subquestmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_INSTALLNATUREPROBES, SUB_QUEST_3)
	if (var(VAR_RESULT))
	{
		addvar(VAR_TEMP_0, 1)
		addvar(VAR_TEMP_3, 1)
	}

	if (var(VAR_TEMP_0) == 3)
	{
		questmenu(QUEST_MENU_SET_REWARD, QUEST_INSTALLNATUREPROBES)
	}
}

script Quest_InstallNatureProbes_Reward_Cutscene
{
    msgbox(format("Wow! You got all of them in? Let's test that..."),MSGBOX_NPC,SPEAKER_DEFAULT)

    applymovement(LIIDIA,Common_Movement_FaceAwayPlayer)
    waitmovement(LIIDIA)

    playse(SE_PC_LOGIN)
    waitse

    applymovement(LIIDIA,Common_Movement_FacePlayer)
    waitmovement(LIIDIA)
    msgbox(format("The tracking is working! You did great, thank you so much. Could I see your Pokédex please? Oh, this isn't the Residomodel... Orre? Fascinating. It should work the same..."),MSGBOX_NPC,SPEAKER_DEFAULT)
    closemessage

    msgbox(format("Okay, done!"),MSGBOX_NPC,SPEAKER_DEFAULT)
    playfanfare(MUS_OBTAIN_ITEM)
    msgbox(format("{PLAYER}'s Pokédex was upgraded with Habitat Mode!"))
    waitmessage
    waitfanfare
    //PSF TODO find a different rewards for this app and update the text
    closemessage

    playse(SE_POKENAV_CALL)
    waitse

    msgbox(format("That's my boss, let me just answer that."),,SPEAKER_LIIDIA)
    applymovement(LIIDIA,Common_Movement_FaceAwayPlayer)
    waitmovement(LIIDIA)

    msgbox(format("Go for Liidia!"),,,PHONE_ON)
    closemessage
    delay(32)
    msgbox(format("...I understand."),,,PHONE_ON)
    closemessage

    playse(SE_POKENAV_HANG_UP)
    waitse
    applymovement(LIIDIA,Common_Movement_FacePlayer)
    waitmovement(LIIDIA)

    msgbox(format("He thanked me... and then told me that my job was redundant. He told I'm fired, and have to leave the premises immediately."),,SPEAKER_LIIDIA)
    msgbox(format("I realize now, I think you put me out of a job. How could I be so... naive?"),,SPEAKER_LIIDIA)
    closemessage

    applymovement(LIIDIA,Quest_InstallNatureProbes_LeaveStation_Movement)
    applymovement(PLAYER,Quest_InstallNatureProbes_WatchLiidiaLeave_Movement)

    waitmovement(LIIDIA)
    removeobject(LIIDIA)
    completequest(QUEST_INSTALLNATUREPROBES)
    release
    end
}

movement Quest_InstallNatureProbes_LeaveStation_Movement{
    walk_right
    walk_down * 7
    step_end
}
movement Quest_InstallNatureProbes_WatchLiidiaLeave_Movement{
    delay_16
    face_right
    face_down
    step_end
}
