script WhyAreYouHelpingThem_StartRaid {
    lock
    setvar(VAR_NAVAL_BASE_STATE,NAVAL_BASE_RAID_START)
    playse(SE_FAILURE)
    playse(SE_FAILURE)
    playse(SE_FAILURE)
    playse(SE_FAILURE)
    applymovement(CHARLOTTE,Common_Movement_FaceDown)
    applymovement(7,WhyAreYouHelpingThem_PoliceRunIn)
    applymovement(8,WhyAreYouHelpingThem_PoliceRunIn)
    applymovement(9,WhyAreYouHelpingThem_PoliceRunIn)
    waitmovement(0)
    msgbox(format("STRUCTURAL BREACH DETECTED. BASE IS NOW SHIFTING TO DEFENSE MODE. EVACUATE IMMEDIATELY."),MSGBOX_AUTOCLOSE,SPEAKER_SPEAKER)
    waitmovement(0)

    msgbox(format("“Defense mode” is pretty advanced for some abandoned buildings."),,SPEAKER_CHARLOTTE)

    msgbox(format("We should redefine abandoned…"),,SPEAKER_ALICIA)

    msgbox(format("Let's split up. I'm faster than you and can cut off the leaders before they escape."),,SPEAKER_CHARLOTTE)

    msgbox(format("wha - fine, I'll try to find the source of the hack and shut it down."),,SPEAKER_ALICIA)

    msgbox(format("See ya."),,SPEAKER_CHARLOTTE)

    closemessage

    applymovement(CHARLOTTE,WhyAreYouHelpingThem_PoliceRunIn)
    waitmovement(0)
    removeobject(7)
    removeobject(8)
    removeobject(9)
    call(WhyAreYouHelpingThem_MoveObject_Script)
    call(TryAutoSave)
    release
    end
}

