        end
}

script WhyAreYouHelpingThem_PreBattleBoss_Script {
    lock
        applymovement(VIGRIM,Common_Movement_FaceLeft)
        applymovement(PLAYER, moves(walk_up * 2, walk_right * 4, step_end))
        waitmovement(0)
        msgbox(format("It's a shame that the police have totally infiltrated our youth. "),,SPEAKER_VIGRIM)

        closemessage

        applymovement(VIGRIM,Common_Movement_WalkLeft)
        waitmovement(0)

        msgbox(format("But beating you is going to be the best route out of here."),,SPEAKER_VIGRIM)

        closemessage

        trainerbattle_continue_after_lose(TRAINER_VIGRIM,format("Wait a minute…"))
        goto(WhyAreYouHelpingThem_PostBattleBoss_Dialogue)
}

script WhyAreYouHelpingThem_PostBattleBoss_Dialogue{
        setvar(VAR_NAVAL_BASE_STATE,SAVE_BAIYA_NAVAL_BASE)
        addobject(ADAORA)
        call(WhyAreYouHelpingThem_MoveObjectAdaora_Script)

        if (defeated(TRAINER_VIGRIM)){

                msgbox(format("You're incredible. Or a cheater. Can't quite tell. Either way, you can have this."),,SPEAKER_VIGRIM)
                closemessage

                applymovement(VIGRIM,Common_Movement_WalkInPlaceLeft)
                waitmovement(0)
                giveitem(ITEM_MASTER_BALL,1)

        }else {

                msgbox(format("…I didn't even touch them…"),,SPEAKER_ALICIA)
        }

        msgbox(format("I'm sorry you have to experience this. I hope you eventually understand what's at stake here, {PLAYER}. Let me help you."),,SPEAKER_VIGRIM)

        closemessage

        applymovement(ADAORA, moves(walk_up * 4, walk_right * 5, walk_up, step_end))
        applymovement(VIGRIM, moves(walk_in_place_slow_left, delay_16, delay_16, face_down, step_end))
        waitmovement(0)
        call(Common_EventScript_OutOfCenterPartyBypassHeal)

        msgbox(format("I handled the brat. I'm guessing you beat -"),,SPEAKER_ADAORA)

        closemessage

        playse(SE_PIN)
        waitse
        applymovement(ADAORA, moves(emote_exclamation_mark, face_left, step_end))
        waitmovement(0)

        msgbox(format("Damn, you too, {PLAYER}?"),,SPEAKER_ADAORA)

        msgbox(format("What was all that shit you tried to tell me before?! What the hell is The Tide doing?"),,SPEAKER_ALICIA)

        msgbox(format("We've got to help more comrades escape. Another time."),,SPEAKER_VIGRIM)

        closemessage

        applymovement(VIGRIM,WhyAreYouHelpingThem_BeginEscape)
        applymovement(ADAORA,WhyAreYouHelpingThem_BeginEscape)
        waitmovement(0)
        goto(WhyAreYouHelpingThem_ExplodeWall_Script)
}

script WhyAreYouHelpingThem_ExplodeWall_Script {

    playse(SE_M_EXPLOSION)
        waitse
        setvar(VAR_0x8004,1)
        setvar(VAR_0x8005,2)
        setvar(VAR_0x8006,8)
        setvar(VAR_0x8007,5)
        special(ShakeCamera)
        waitstate
        call(WhyAreYouHelpingThem_BlowHoleWall)
        clearflag(FLAG_HIDE_BAIYA)
        playse(SE_EXIT)
        waitse
        addobject(BAIYA)
        applymovement(BAIYA, moves(walk_down, walk_left * 3, face_down, step_end))
        waitmovement(0)

        msgbox(format("This place is swarming with cops. You two need to get the hell out, right now. This goes straight out."),,SPEAKER_BAIYA_TIDE)

        msgbox(format("We can't leave people behind. "),,SPEAKER_VIGRIM)

        msgbox(format("We don't have time for this! If you get arrested, this all falls apart! You. Need. To. Go."),,SPEAKER_BAIYA_TIDE)

        msgbox(format("I think they're right."),,SPEAKER_ADAORA)

        closemessage
        applymovement(VIGRIM, moves(walk_right * 3, walk_up * 2, step_end))
        applymovement(ADAORA, moves(walk_right * 3, walk_up * 3, step_end))
        waitmovement(0)
        playse(SE_EXIT)
        waitse
        removeobject(ADAORA)
        removeobject(VIGRIM)
        applymovement(BAIYA, moves(walk_down, walk_left * 3, step_end))
        waitmovement(0)

        msgbox(format("You're working with The Tide too?!?"),,SPEAKER_ALICIA)
        closemessage
        startmenu_savescreen
        goto(WhyAreYouHelpingThem_StartBattle_Script)
}

