script WaitHeDidWhat_PreparePlayer_Script {
    lock
        faceplayer
        msgbox(format("Are you ready to battle for the Championship?"),MSGBOX_YESNO)
        closemessage
        if (var(VAR_RESULT) == YES){
            call(GroupStages_MoveObjects_Script)
                fadeblackandsetremovewarpfadeflag
                warpsilent(MAP_SHARPRISE_STADIUM_ARENA,0)
        }
    release
        end
}

script WaitHeDidWhat_WalkIntoChampionshipPosition {
    lock
        applymovement(PLAYER,WaitHeDidWhat_WalkToBattlefieldPosition)
        waitmovement(0)
        msgbox(format("{PLAYER}, I don't think you can beat me when I have home court advantage!"),,SPEAKER_KAI)
        msgbox(format("You and Charlotte and SharpRise might be able to outspend me, but you can't outwork me and my Pokémon!"),,SPEAKER_KAI)
        msgbox(format("I'm going to be the Resido Champion!"),,SPEAKER_KAI)
        msgbox(format("Kai, I'm super proud of you. I'm even happy you've gotten this far!"),,SPEAKER_ALICIA,,EMOTE_HAPPY)
        msgbox(format("But I've got an undefeated winning streak against you, and that isn't changing now."),,SPEAKER_ALICIA)

        setvar(VAR_STORYLINE_STATE,STORY_SAVE_FINALS)

        startmenu_savescreen
        goto(WaitHeDidWhat_StartBattle_Script)
}

script WaitHeDidWhat_StartBattle_Script{
    lock
        applymovement(PLAYER,Common_Movement_WalkRight)
        applymovement(1,Common_Movement_WalkLeft)
        waitmovement(0)
        msgbox(format("I'll beat you... for Resido!"),,SPEAKER_KAI,TAIL_SHOUT)
        trainerbattle_no_intro(TRAINER_KAI_FINALS,format("…so close."))
        closemessage

        goto(WelcomeToTheHallOfFame_PostBattle_Dialogue)
}

movement WaitHeDidWhat_GetOutOfWay {
    walk_left
        face_right
        step_end
}

movement WaitHeDidWhat_WalkToBattlefieldPosition {
    walk_left * 13
        walk_up * 3
        walk_right
        step_end
}

