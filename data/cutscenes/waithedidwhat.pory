script WaitHeDidWhat_RivalsGoToMatch_Script {
    lock
        startcutscene(JUMPPLAYER_WAITHEDIDWHAT)
        applymovement(5, moves(lock_facing_direction, walk_right, delay_16, delay_16, delay_16, delay_16, delay_16, walk_left, step_end))
        applymovement(PLAYER,WaitHeDidWhat_GetOutOfWay)
        applymovement(KAI, moves(walk_up * 4, delay_16, step_end))
        opendoor(10,1)
        waitdooranim
        waitmovement(0)
        playse(SE_EXIT)
        removeobject(KAI)
        closedoor(10,1)
        waitdooranim
        goto(WaitHeDidWhat_CalledToSkybox_Script)
}

script WaitHeDidWhat_CalledToSkybox_Script {
        playse(SE_POKENAV_CALL)
        waitse
        playse(SE_POKENAV_CALL)
        waitmessage
        msgbox(format("Congrats on making it to the Finals! Come to the Skybox to watch Charlotte's battle!"),,SPEAKER_OLIVER,,,PHONE_ON)

        playse(SE_POKENAV_HANG_UP)
        waitse
        setvar(VAR_STORYLINE_STATE,STORY_WATCH_SEMIFINAL)
        endcutscene
        release
        end
}

script WaitHeDidWhat_WatchOtherSemifinal_Dialogue {
        startcutscene(JUMPPLAYER_WAITHEDIDWHAT)
        setvar(VAR_STORYLINE_STATE,STORY_READY_FINALS)
        lock

        msgbox(format("Good shit down there! Time to crush this Kai kid. See you in the Finals!"),,SPEAKER_CHARLOTTE)

        closemessage

        applymovement(PLAYER,WaitHeDidWhat_GetOutOfWay)
        opendoor(9,1)
        waitdooranim
        applymovement(8, moves(walk_up * 2, step_end))
        waitmovement(0)
        playse(SE_EXIT)
        removeobject(8)
        closedoor(9,1)
        waitdooranim
        fadescreen(FADE_TO_BLACK)
        setobjectxy(PLAYER,9,6)
        turnobject(PLAYER,DIR_SOUTH)
        TeleportCamera(9,6)
        fadescreen(FADE_FROM_BLACK)

        msgbox(format("In a stunning upset, the hometown hero, Kai defeats Charlotte and moves onto the Finals! What a wild match!"))
        closemessage

        playse(SE_PIN)
        applymovement(5,Common_Movement_ExclamationMark)
        applymovement(1,Common_Movement_ExclamationMark)
        applymovement(7,Common_Movement_ExclamationMark)
        applymovement(PLAYER,Common_Movement_ExclamationMark)
        waitmovement(0)

        msgbox(format("(...holy shit!)"),,SPEAKER_ALICIA)

        msgbox(format("We'll take a quick break, and when we come back... your Championship match! Kai VS {PLAYER}, for all the marbles!"))
        closemessage

        applymovement(5, moves(walk_down, walk_right * 2, step_end))
        applymovement(7, Common_Movement_WalkLeft)
        waitmovement(0)

        applymovement(PLAYER, Common_Movement_FaceLeft)
        waitmovement(0)
        msgbox(format("I sent you a motivational email to get you ready for this match! Did you get it?"),,SPEAKER_LUCREZIA)
        msgbox(format("I don't know what email he's talking about... I don't even use my email."),,SPEAKER_ALICIA,TAIL_THOUGHT,EMOTE_SWEAT)
        closemessage

        applymovement(PLAYER, Common_Movement_FaceRight)
        waitmovement(0)
        msgbox(format("Good luck, {PLAYER}."),,SPEAKER_OLIVER)

        closemessage
        endcutscene
        release
        end
}

