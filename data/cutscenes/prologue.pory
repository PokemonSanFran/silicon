//Prologue_

const PLAYER = OBJ_EVENT_ID_PLAYER
const MAGNUS = 1
const TALA = 2
const ARMANDO = 3
const ELLEN = 4
const KEIYING = 5
const IMELDA = 6
const DOYLE = 7
const GUARD = 8

const FLAG_HIDE_ELLEN = FLAG_TEMP_1

script Prologue_FlagsVars_Script
{
    setvar(VAR_PROLOGUE_STATE,GIVEN_POKEMON)
    setflag(FLAG_SYS_APP_PROLOUGE_GET)
    setflag(FLAG_SET_WALL_CLOCK)
}

script Prologue_SetUp_Script
{
        callnative(GiveItems_Prologue_Intro)
        call(Prologue_FlagsVars_Script)
        call(Prologue_IntroTime_Dialogue)
//PSF TODO open modal to tell player about teaching their pokemon new moves
        end
}

script Prologue_LostToMagnus_Script{
    setvar(VAR_PROLOGUE_STATE,WALKED_IN_CHAMBER)
    msgbox(format("In the final build, this will be a modal explaining that you can teach your Pokémon different moves from the Summary Screen."))
    closemessage
    release
    end
}

script Prologue_InteractMagnus_Script{
    lock
        msgbox(format("You made it, {PLAYER}. Welcome to your final battle."),MSGBOX_NPC,SPEAKER_MAGNUS)
        msgbox(format("We've been watching your progress for a while now, and your battles against the other three were absolutely captivating."),,SPEAKER_MAGNUS)
        msgbox(format("You're going to be a great Champion to carry on the legacy of Resido... if you can defeat me!"),,SPEAKER_MAGNUS)
        closemessage
        startmenu_savescreen
        setvar(VAR_PROLOGUE_STATE,LOST_TO_MAGNUS)
        trainerbattle_no_intro(TRAINER_MAGNUS_PROLOGUE,format("Fantastic work, {PLAYER}."))
        goto(Prologue_PostBattle_Script)
        release
        end
}

script Prologue_MoveEliteRoomObjects_Script{
    getplayerxy(VAR_TEMP_0,VAR_TEMP_1)

        if (var(VAR_TEMP_0) != 6 || (var(VAR_TEMP_1) != 6)){
            fadescreen(FADE_TO_BLACK)
                setobjectxy(PLAYER,6,6)
                TeleportCamera(6,6)
                applymovement(PLAYER,Common_Movement_FaceUp)
                applymovement(MAGNUS,Common_Movement_FaceDown)
                fadescreen(FADE_FROM_BLACK)
        }
    return
}

script Prologue_PostBattle_Script
{
    lock
    startcutscene(JUMPPLAYER_PROLOGUE_CHAMPION)
    clearflag(TRAINER_FLAGS_START + TRAINER_MAGNUS_PROLOGUE)
    setvar(VAR_PROLOGUE_STATE,DEFEATED_MAGNUS)
    call(Prologue_MoveEliteRoomObjects_Script)
    delay(16)
    playse(SE_TRUCK_DOOR)
    call(OrolandColiseum_Arena_OpenExit_Script)
    waitse
    playbgm(MUS_HALL_OF_FAME_ROOM,TRUE)
    msgbox(format("{PLAYER}! You are now the Resido Pokémon League Champion!"),,SPEAKER_MAGNUS,TAIL_SHOUT,EMOTE_HAPPY)
    msgbox(format("And perhaps, you will be Resido's last true Champion."),,SPEAKER_MAGNUS,TAIL_WHISPER)
    msgbox(format("Wear this title with as much as I did when I earned it! And now, for the Hall of Fame!"),,SPEAKER_MAGNUS,,EMOTE_HAPPY)
    closemessage
    applymovement(MAGNUS, moves(walk_up * 3, step_end))
    applymovement(PLAYER,Common_Movement_WalkUp4)
    waitmovement(MAGNUS)
    removeobject(MAGNUS)
    playse(SE_EXIT)
    fadeblackandsetremovewarpfadeflag
    warpdoor(MAP_OROLAND_COLISEUM_HALL,9,9)
    endcutscene
    msgbox(format("The next day...{PAUSE_UNTIL_PRESS}"))
    closemessage
    waitstate
}

script Prologue_PostBattleTime_Dialogue
{
    goto(Prologue_PostWarp_Hall_Dialgoue)
    return
}

script Prologue_PostWarp_Hall_Dialgoue{
        setvar(VAR_PROLOGUE_STATE,WALK_INTO_HALL)
        setrespawn(HEAL_LOCATION_OROLAND_COLISEUM_HALL)
        applymovement(PLAYER,Common_Movement_WalkUp)
        waitmovement(PLAYER)
        lock
        applymovement(GUARD, moves(lock_facing_direction, walk_right, unlock_facing_direction, step_end))
        applymovement(MAGNUS,Common_Movement_FaceLeft)
        msgbox(format("Its not the usual celebration, but of course, with the recent news, the budget has been slashed. But we've figured a small gathering with the Elite Four and Gym Leaders would be nice."),,SPEAKER_MAGNUS)
        closemessage
        applymovement(MAGNUS,Common_Movement_FaceDown)
        msgbox(format("Ellen was waiting for us to arrive - they've got a speech prepared."),,SPEAKER_MAGNUS)
        closemessage
        applymovement(MAGNUS, moves(walk_up, walk_left, walk_up, step_end))
        waitmovement(MAGNUS)
        call(Prologue_PostWarp_PositionObjects_Script)
        call(TryAutoSave)
        release
        end
}

script Prologue_Ellen_Speech_Dialogue{
    lock
        startcutscene(JUMPPLAYER_PROLOGUE_ANNOUNCEMENT)
        setvar(VAR_PROLOGUE_STATE,ELLEN_ANNOUNCE)
        call(Prologue_SetUpSeechCrowd_Script)
        msgbox(format("Thank you all for being here!"),,SPEAKER_ELLEN)
        msgbox(format("First of course, congratulations to the newest Champion, {PLAYER}! Despite not being from here, you've excelled in our region's competitive climate, and we're honored to cement you into our Hall of Fame."),,SPEAKER_ELLEN)
        msgbox(format("Of course, I regret to inform you all that effective immediately, I'll be stepping down as a member of the Elite Four."),,SPEAKER_ELLEN)
        closemessage
        call(Prologue_ExclaimCrowd_Script)
        msgbox(format("I will be retiring my career as a Trainer, and soon after, I'll be leaving the region."),,SPEAKER_ELLEN)
        closemessage
        applymovement(ELLEN,Common_Movement_FaceRight)
        msgbox(format("There's no easy way to put this - I don't have any hope in the new League changes. I think this is beginning of a very dark road ahead of us - we have customs and traditions and culture built here, and they've let the money get in the way of that. For those of you that haven't given up, and are fighting the good fight, you have my deepest respect..."),,SPEAKER_ELLEN)
        closemessage
        applymovement(ELLEN,Common_Movement_FaceLeft)
        msgbox(format("but also my deepest sympathies. I fear this is a battle we've already lost, and it's only a matter of time before we've been stripped of everything... and I can't bear the thought of that."),,SPEAKER_ELLEN)
        closemessage
        applymovement(ELLEN,Common_Movement_FaceDown)
        msgbox(format("Good luck to all of you."),,SPEAKER_ELLEN)
        closemessage
        applymovement(ELLEN, moves(walk_right, walk_down * 5, step_end))
        delay(30)
        endcutscene
        fadescreen(FADE_TO_BLACK)
        removeobject(ELLEN)
        call(Prologue_Announcement_PostObjectSetup_Script)
        fadescreen(FADE_FROM_BLACK)
        call(TryAutoSave)
        release
        end
}

script Prologue_PostWarp_PositionObjects_Script
{
    if(var(VAR_PROLOGUE_STATE) < WALK_INTO_HALL)
    {
        return
    }

    setobjectxyperm(MAGNUS,8,5)
    setobjectxyperm(GUARD,9,9)

    turnobject(MAGNUS,DIR_NORTH)
    setobjectmovementtype(MAGNUS,MOVEMENT_TYPE_FACE_UP)
    return
}

script Prologue_Announcement_PostObjectSetup_Script
{
    if(var(VAR_PROLOGUE_STATE) < ELLEN_ANNOUNCE)
    {
        return
    }
        setobjectxy(MAGNUS,3,6)
        setobjectxyperm(MAGNUS,3,6)

        setflag(FLAG_HIDE_ELLEN)

        turnobject(KEIYING,DIR_NORTH)
        turnobject(IMELDA,DIR_SOUTH)
        turnobject(TALA,DIR_SOUTH)
        turnobject(ARMANDO,DIR_NORTH)
        turnobject(DOYLE,DIR_WEST)
        turnobject(MAGNUS,DIR_WEST)

        setobjectmovementtype(KEIYING,MOVEMENT_TYPE_FACE_UP)
        setobjectmovementtype(IMELDA,MOVEMENT_TYPE_FACE_DOWN)
        setobjectmovementtype(TALA,MOVEMENT_TYPE_FACE_DOWN)
        setobjectmovementtype(ARMANDO,MOVEMENT_TYPE_FACE_UP)
        setobjectmovementtype(DOYLE,MOVEMENT_TYPE_FACE_LEFT)
        setobjectmovementtype(MAGNUS,MOVEMENT_TYPE_FACE_LEFT)
        return
}

script Prologue_Announcement_ObjectSetup_Script
{
        call(Prologue_PostWarp_PositionObjects_Script)
        call(Prologue_Announcement_PostObjectSetup_Script)
}

