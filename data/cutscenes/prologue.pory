script Prologue_IntroTime_Dialogue
{
    lockall
    msgbox(format("10 years ago..."),MSGBOX_AUTOCLOSE)
    closemessage
    warpsilent(MAP_OROLAND_COLISEUM_HALLWAY,5,12)
