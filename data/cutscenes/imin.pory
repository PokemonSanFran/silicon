script ImIn_CheckPlayer_Script {
    lock

    //If Elite Four has specifically told you to go to the house to break in, nothing happens here.
    if (var(VAR_STORYLINE_STATE) != STORY_BEFORE_RAMESH_BREAKIN){
        release
            end
    }
    goto(ImIn_StartHouseBreak_Script)
}

script ImIn_StartHouseBreak_Script
{
    startcutscene(JUMPPLAYER_IMIN_BREAKIN)
        setvar(VAR_TOWER_RAID_STATE,BROKEN_IN_RAMESH)

        fadescreen(FADE_TO_BLACK)
        call(ImIn_CutsceneSetup_OutsideHouse_Script)
        fadescreen(FADE_FROM_BLACK)

        applymovement(PLAYER, moves(walk_up, step_end))
        waitmovement(PLAYER)

        applymovement(FRANK,Common_Movement_FaceDown)

        msgbox(format("We're certain nobody is home?"),,SPEAKER_FRANK)

        msgbox(format("Ramesh hasn't left work early a day in their life. SharpRise Capital is led by monsters, but at least they're hard-working monsters."),,SPEAKER_MAGNUS)

        msgbox(format("We're in position at CapheCity. Ready to mobilize this diversion when you are."),,SPEAKER_ADAORA,,,PHONE_ON)
        closemessage

        applymovement(KAI, moves(walk_right, walk_down * 5, step_end))
        waitmovement(KAI)

        applymovement(TALA,Common_Movement_FaceRight)
        applymovement(MAGNUS,Common_Movement_FaceRight)
        applymovement(FRANK,Common_Movement_FaceRight)
        applymovement(ELLEN,Common_Movement_FaceRight)
        applymovement(PLAYER,Common_Movement_FaceRight)
        waitmovement(PLAYER)

        msgbox(format("The side door will definitely work, didn't see an alarm either."),,SPEAKER_KAI_TIDE)

        msgbox(format("Let's move then!"),,SPEAKER_TALA)
        closemessage

        applymovement(KAI, moves(walk_up * 4, face_down, step_end))
        waitmovement(KAI)

        call(ImIn_ReleaseFromBall_Script)

        msgbox(format("Brick Break sure comes in handy when most houses are made of the stuff."),,SPEAKER_KAI_TIDE)
                closemessage

        playse(SE_M_BRICK_BREAK)
        applymovement(PKMNA, moves(lock_facing_direction, walk_left, walk_right, step_end))
        waitse
        waitmovement(PKMNA)
        call(ImIn_DestroyWall_Script)

        applymovement(PKMNA, moves(walk_left, step_end))
        applymovement(TALA, moves(walk_right * 5, walk_up * 4, walk_left, step_end))
        applymovement(MAGNUS, moves(walk_right, walk_up * 4, walk_left, step_end))
        applymovement(FRANK, moves(walk_right * 4, walk_up * 3, walk_left, step_end))
        applymovement(ELLEN, moves(walk_up * 4, walk_left, step_end))
        applymovement(KAI, moves(walk_down, walk_left, step_end))

        playse(SE_EXIT)
        playse(SE_EXIT)
        playse(SE_EXIT)
        playse(SE_EXIT)
        playse(SE_EXIT)
        playse(SE_EXIT)
        waitse
        waitmovement(TALA)

        removeobject(PKMNA)
        removeobject(TALA)
        removeobject(MAGNUS)
        removeobject(FRANK)
        removeobject(ELLEN)
        removeobject(KAI)
        call(TryAutoSave)
        endcutscene
        release
        end
}

