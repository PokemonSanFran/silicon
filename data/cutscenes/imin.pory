script ImIn_OfficeReveal_Dialogue{
    lock
        setvar(VAR_TOWER_RAID_STATE,SAVE_CHARLOTTE_SHARPRISESPIRE)
        playbgm(MUS_ENCOUNTER_MAY,TRUE)

        applymovement(PLAYER, moves(walk_down * 4, step_end))
        waitmovement(PLAYER)

        msgbox(format("Do you like my new office?"),,SPEAKER_CHARLOTTE_SHARPRISE)
        closemessage

        msgbox(format("Charlotte, what are you doing here?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("I didn't choose to align myself with the ghetto trash. Turns out, if you stick with the good guys, you get a sick job and a corner office."),,SPEAKER_CHARLOTTE_SHARPRISE)

        msgbox(format("Wait, trash? Did you hear what these people did to HalaiIsland?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("TheTide was destroying this region with their idiocy. We wiped ‘em out. And you decided to help them? After everything SharpRise Capital did for you?"),,SPEAKER_CHARLOTTE_SHARPRISE)

        msgbox(format("So you just don't care that you work for murderers?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("Look, all this helping people shit is cool, but I came here to be the best. I'm done losing to scrubs and I'm done pretending to care."),,SPEAKER_CHARLOTTE_SHARPRISE)

        msgbox(format("Daddy won't be able to buy your way out of this one."),MSGBOX_DEFAULT,SPEAKER_ALICIA)
        closemessage

        applymovement(CHARLOTTE, moves(walk_right, walk_up * 3, face_left, step_end))
        waitmovement(CHARLOTTE)
        applymovement(PLAYER,Common_Movement_FaceRight)

        startmenu_savescreen
        goto(ImIn_StartCharlotteBattle_Script)
}

script ImIn_StartCharlotteBattle_Script {

    lock
        msgbox(format("If you and Kai are dead, do you think I get to be Champion instead?"),,SPEAKER_CHARLOTTE_SHARPRISE)
        closemessage

        trainerbattle_no_intro(TRAINER_CHARLOTTE_IMIN,format("How does this keep happening?!?!?"))
        goto(ImIn_CharlotteDefeated_Dialogue)
}

script ImIn_InteractCharlotteBattle_Script
{
    if(var(VAR_TOWER_RAID_STATE) == SAVE_CHARLOTTE_SHARPRISESPIRE){
    playbgm(MUS_ENCOUNTER_MAY,TRUE)
    goto(ImIn_StartCharlotteBattle_Script)
    }
    return
}

script ImIn_CharlotteDefeated_Dialogue {
    lock
    startcutscene(JUMPPLAYER_IMIN_POSTRIVAL)
        setvar(VAR_TOWER_RAID_STATE,DEFEATED_CHARLOTTE_SHARPRISESPIRE)

        msgbox(format("Where's Lucrezia?!"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("What's the secret? What am I missing? Why do I keep LOSING?"),,SPEAKER_CHARLOTTE_SHARPRISE)

        msgbox(format("Everything about SharpRise Capital is bullshit. You're not any stronger. The region isn't any better. But as long as they have stans like you, they're going to continue to get richer and more toxic. Tell me where Lucrezia is."),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("That warp panel goes to the skydeck. His real office is there."),,SPEAKER_CHARLOTTE_SHARPRISE)
                call(ImIn_RevealLucreziaWarp_Script)
        closemessage
        call(TryAutoSave)
        endcutscene
        release
        end
}

script ImIn_PostCharlotteBattle_Interact_Dialogue{
    if(var(VAR_TOWER_RAID_STATE) == DEFEATED_CHARLOTTE_SHARPRISESPIRE){
        msgbox(format("…all that training…"),MSGBOX_NPC,SPEAKER_CHARLOTTE_SHARPRISE)
            }
