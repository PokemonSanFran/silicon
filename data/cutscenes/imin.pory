script ImIn_InteractDoor_Script
{
    checkitem(ITEM_MAGMA_EMBLEM)

        if (var(VAR_RESULT)){
            goto(ImIn_EnterCorrectCode_Script)
        }

    msgbox(format("Find the thing to unlock this door!"),MSGBOX_AUTOCLOSE)
}

script ImIn_EnterCorrectCode_Script
{
    lock
        setvar(VAR_TOWER_RAID_STATE,RAMESH_WARP_DOOR_UNLOCKED)

        playse(SE_DING_DONG)
        waitse
        playse(SE_SLIDING_DOOR)
        call(ImIn_UnlockDoor_Script)
        delay(16)

        fadescreen(FADE_TO_BLACK)
        call(ImIn_MoveObject_BeforeWarp_Script)
        fadescreen(FADE_FROM_BLACK)

        msgbox(format("Adaora, we're in. Everybody remember the plan?"),,SPEAKER_FRANK)

        msgbox(format("Once you're all through the panel, I'll lead the diversion protest at the front doors of the tower. Security will be focused on us, letting you to the executive levels and hopefully find Lucrezia."),,SPEAKER_ADAORA,,,PHONE_ON)

        msgbox(format("I'm too old for scaling mountains. Frank and I can get into the production studio and get ready to broadcast that confession."),,SPEAKER_MAGNUS)

        msgbox(format("These people are fighting to kill. Stay safe."),,SPEAKER_KAREN)
                closemessage

        applymovement(TALA,Common_Movement_WalkRight)
        waitmovement(TALA)
        removeobject(TALA)
        playse(SE_WARP_OUT)
        applymovement(FRANK, moves(walk_up, walk_right, step_end))
        waitmovement(FRANK)
        removeobject(FRANK)
        playse(SE_WARP_OUT)
        applymovement(ELLEN,Common_Movement_WalkLeft)
        waitmovement(ELLEN)
        removeobject(ELLEN)
        playse(SE_WARP_OUT)
        applymovement(MAGNUS,Common_Movement_WalkDown)
        waitmovement(MAGNUS)
        removeobject(MAGNUS)
        playse(SE_WARP_OUT)
        applymovement(KAI, moves(walk_up, walk_left, step_end))
        waitmovement(KAI)
        removeobject(KAI)
        playse(SE_WARP_OUT)

        setvar(VAR_STORYLINE_STATE,STORY_WARP_TILE_ACCESSIBLE)
        setvar(VAR_SHARPRISESPIRE_CONFERENCE_STATE,TRUE_RAID_START)

        release
        end
}

