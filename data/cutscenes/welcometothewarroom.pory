movement WelcomeToTheWarRoom_Pace_Movement {
    walk_left * 2
    walk_right *2
    walk_left * 2
    walk_right *2
    face_down
    step_end
}
movement WelcomeToTheWarRoom_ChiefLeaveRoom_Movement {
    walk_right
    walk_down * 4
    walk_left * 2
    walk_down * 3
    step_end
}
