script KeiyingRaisonDetre_MoveIntoFoyer_Script {
    lock
        startcutscene(JUMPPLAYER_KEIYINGSRAISONDETRE)
        setvar(VAR_KEIYING_RAISON_DETRE_STATE,MET_KEIYING_KIDS)
        applymovement(ALEKSANDER, KeiyingRaisonDetre_ComeDownStairs)
        delay(48)
        applymovement(SUMMER, KeiyingRaisonDetre_ComeDownStairs)
        waitmovement(0)
        release
        goto(KeiyingRaisonDetre_KidsMeetPlayer_Dialogue)
        end
}

script KeiyingRaisonDetre_KidsMeetPlayer_Dialogue {
    msgbox(format("Aaaahhhh! {PLAYER}! You're here! In the flesh!"),,SPEAKER_ALEKSANDER)
        msgbox(format("…Alek, you're a freak."),,SPEAKER_SUMMER)
        closemessage

        applymovement(ALEKSANDER, moves(jump_2_left, jump_2_right, jump_2_left, jump_2_right, jump_2_left, jump_2_right, jump_2_left, jump_2_right, jump_2_left, jump_2_right, jump_2_left, jump_2_right, jump_2_left, jump_2_right, face_left, step_end))

        msgbox(format("Aren't you excited Summer?! Maybe they'll sign your {PLAYER} shirt! "),,SPEAKER_ALEKSANDER)
        msgbox(format("…shut up!"),,SPEAKER_SUMMER)
        msgbox(format("Oh oh oh, show us how you took down Belen! Can we see some battle moves? Oh come on yes, let's battle, right now, yeah yeah yeah!"),,SPEAKER_ALEKSANDER)
        msgbox(format("All right, all right, calm down. I told you you'd have to stifle your excitement, didn't I?"),,SPEAKER_KEIYING)
        applymovement(KEIYING, moves(walk_down * 4, step_end))
        msgbox(format("You don't want to scare {PLAYER} away, do you?"),,SPEAKER_KEIYING)
        msgbox(format("No no no! Oh, I'm gonna go get all my League stuff, I'll be right back!"),,SPEAKER_ALEKSANDER)
        closemessage
        applymovement(ALEKSANDER, KeiyingRaisonDetre_RunUpstairs)
        waitmovement(0)
        msgbox(format("Sorry about that. They get… very excited. And don't let Summer's demeanor fool you. I think they've watched your battle against Emrys at least 40 times."),,SPEAKER_KEIYING)
        applymovement(SUMMER, Common_Movement_FaceLeft)
        waitmovement(0)
        msgbox(format("Dad!"),,SPEAKER_SUMMER)
        closemessage
        applymovement(SUMMER, KeiyingRaisonDetre_RunUpstairs)
        waitmovement(0)
        removeobject(SUMMER)
        removeobject(ALEKSANDER)
        goto(KeiyingRaisonDetre_CityDiscussion_Dialogue)
        end
}

script KeiyingRaisonDetre_CityDiscussion_Dialogue {
    applymovement(PLAYER, moves(walk_up, walk_left * 2, walk_up, step_end))
        waitmovement(0)
        msgbox(format("Your house is beautiful. Actually, the entire city is beautiful."),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("Thank you. It was important to me that I raised my family in PetarosaBorough. Most SharpRise Capital employees want to be in the city - close to the office and the nightlife. "),,SPEAKER_KEIYING)

        msgbox(format("But it's hard to justify raising a family there. It's expensive on this side, sure, but it's less dangerous… and not suffering as much."),,SPEAKER_KEIYING)

        msgbox(format("I've been struggling to find the right word for it, but, yeah, suffering sounds right. I've met so many people who are having a really rough time."),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("I've noticed that Charlotte doesn't quite see the region the way you do! I admire your compassion."),,SPEAKER_KEIYING)

        msgbox(format("Do I really deserve all of this just because I'm decent at battles?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("I completely understand, trust me. When I worked in HodouCity, it wasn't this bad, but despite my best efforts, things have gotten worse."),,SPEAKER_KEIYING)
        closemessage

        applymovement(KEIYING, moves(walk_up, face_down, step_end))
        waitmovement(0)

        msgbox(format("Come, let's talk."),,SPEAKER_KEIYING)
        closemessage
        applymovement(KEIYING, moves(walk_left * 8, step_end))
        waitmovement(0)
        setobjectxy(KEIYING, 3, 4)
        setobjectxyperm(KEIYING, 3, 4)
        turnobject(KEIYING, DIR_EAST)
        release
        end
}

