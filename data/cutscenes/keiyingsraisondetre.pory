script KeiyingRaisonDetre_Wine_Dialogue {
        startcutscene(JUMPPLAYER_KEIYINGSRAISONDETRE)
    applymovement(PLAYER, Common_Movement_FaceLeft)
        waitmovement(0)

        msgbox(format("How much do you know about Lucrezia?"),,SPEAKER_KEIYING)

        msgbox(format("They don't have deep roots here, but they're a brilliant business person. I don't always see eye to eye with them, but they've never let down a shareholder."),,SPEAKER_KEIYING)

        msgbox(format("What shareholders?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("The corporate sponsors who helped us acquire the Pokémon League. Lucrezia saw its potential and knew we could make it even bigger. Presto, Arriba and Buzzr all quickly got on board."),,SPEAKER_KEIYING)

        msgbox(format("What do you mean?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("Do you know how the Kanto region makes the majority of its revenue?"),,SPEAKER_KEIYING)

        msgbox(format("Isn't it mostly manufacturing?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("Used to be. But after Red took the League by storm back in '96, the League has been the primary economic driver. Revenue from the Pokémon League is about to eclipse tourism in Alola too."),,SPEAKER_KEIYING)

        msgbox(format("Woah wait, bigger than Alolan tourism?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("People love Pokémon battles. Lucrezia knew if we used our resources to create a compelling product, we wouldn't need Dynamax or League HQs built into cathedrals. We've got what the people want to see."),,SPEAKER_KEIYING)

        msgbox(format("The broadcasts?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("Yes. My kids being obsessed with you isn't an accident. We're building rock stars."),,SPEAKER_KEIYING)

        msgbox(format("SharpRise Capital is going to make Resido the region where Trainers come to become rock stars. Resido's new talent will attract the best and the brightest, and the region will be richer for it. We can uplift all of Resido's citizens to something much much greater. You're an investment, {PLAYER}, but it's all part of a much bigger play."),,SPEAKER_KEIYING)

        applymovement(KEIYING,Common_Movement_FaceAwayPlayer)
        waitmovement(KEIYING)

        msgbox(format("I choose to believe that this is for the greater good."),,SPEAKER_KEIYING)

        msgbox(format("What did you sa -"),MSGBOX_DEFAULT,SPEAKER_ALICIA)
        closemessage
        playse(SE_DING_DONG)
        waitfanfare

        msgbox(format("Dinner is served!"),,SPEAKER_MAID)

        msgbox(format("Ah, let's eat!"),,SPEAKER_KEIYING)
        closemessage
        applymovement(KEIYING, moves(walk_down * 6, step_end))
        waitmovement(0)
        release
        setobjectxy(KEIYING, 37, 5)
        setobjectxyperm(KEIYING, 37, 5)
        setvar(VAR_KEIYING_RAISON_DETRE_STATE,POST_KEIYING_WINE_SPEECH)
        call(TryAutoSave)
        endcutscene
        end
}

script KeiyingRaisonDetre_StartDinner_Script {
    getplayerxy(VAR_TEMP_0, VAR_TEMP_1)

        if (var (VAR_TEMP_0) == 36) {
            applymovement(PLAYER, moves(walk_up, walk_right * 9, walk_up * 4, face_left, step_end))
        } else {
            applymovement(PLAYER, moves(walk_up, walk_right * 8, walk_up * 4, face_left, step_end))
        }
    waitmovement(0)
        startcutscene(JUMPPLAYER_KEIYINGSRAISONDETRE)

        msgbox(format("{PLAYER}, we're honored to have you in our home. Enjoy dinner!"),,SPEAKER_KEIYING)
        closemessage
        fadescreen(FADE_TO_BLACK)
        addobject(ALEKSANDER)
        addobject(SUMMER)
        setobjectxy(SUMMER, 42, 7)
        setobjectxy(ALEKSANDER, 40, 7)
        setobjectxy(KEIYING, 37, 5)
        turnobject(SUMMER, DIR_NORTH)
        turnobject(ALEKSANDER, DIR_NORTH)
        goto(KeiyingRaisonDetre_DinnerConversation_Dialogue)
        end
}

script KeiyingRaisonDetre_DinnerConversation_Dialogue {
    special(SpawnCameraObject)
        setvar(VAR_0x8004, 37)
        setvar(VAR_0x8005, 5)
        special(TeleportCamera)
        special(DrawWholeMapView)
        fadescreen(FADE_FROM_BLACK)
        applymovement(CAMERA, moves(walk_slow_right * 6, step_end))
        msgbox(format("Is it true your dad is Red from Pallet Town?"),,SPEAKER_ALEKSANDER)
        closemessage
        msgbox(format("How many badges did you have in Orre?"),,SPEAKER_ALEKSANDER)
        closemessage
        bufferitemnameplural(STR_VAR_1,ITEM_LAVA_COOKIE,2)
        msgbox(format("Dad, I was right, {PLAYER} does like {STR_VAR_1}!"),,SPEAKER_SUMMER)
        closemessage
		waitmovement(CAMERA)
        fadescreen(FADE_TO_BLACK)
        TeleportCamera(43,5)
        special(RemoveCameraObject)
        delay(60)
        playse(SE_POKENAV_CALL)
        waitse
        fadescreen(FADE_FROM_BLACK)
        goto(KeiyingRaisonDetre_RunToWork_Dialogue)
