        end
}

script KeiyingRaisonDetre_RunToWork_Dialogue {

    msgbox(format("Sorry, that's my phone and I need to take that."),,SPEAKER_KEIYING)
        closemessage
        applymovement(KEIYING, moves(walk_left, step_end))
        waitmovement(0)
        applymovement(KEIYING, Common_Movement_FaceLeft)
        waitmovement(0)
        delay(32)
        applymovement(KEIYING, Common_Movement_FaceRight)
        waitmovement(0)
        msgbox(format("Shit, there's an urgent matter at work. I'm so sorry kids, I'll try to hurry back."),,SPEAKER_KEIYING)
        msgbox(format("{PLAYER}, I would hate to have you make the trek back to CuconuTown this late. We have a guest room, if you'd like to stay here."),,SPEAKER_KEIYING)
        msgbox(format("Oh, that would be great, thanks!"),,SPEAKER_ALICIA,,EMOTE_HAPPY)
        closemessage

        applymovement(KEIYING, moves(walk_down * 3, walk_right * 5, walk_up, walk_in_place_slow_left, delay_16, walk_in_place_slow_right, delay_16, walk_down, walk_left * 6, step_end))
        waitmovement(0)

        msgbox(format("Wait, I thought that hallway just goes upstairs?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("Yeah, it does. Daddy just teleports to work!"),,SPEAKER_SUMMER)
        msgbox(format("…what?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("SharpRise Capital has a ton of money in warp tiles. All the executives have panels from their house to their office installed. He literally teleports to work, everyday."),,SPEAKER_SUMMER)

        msgbox(format("Oh damn, you weren't kidding."),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("I don't know why they bother. Our parents are never even home. They're trying so hard to save the world, they're totally ignoring the one right in front of them.\NI wish he would go back to being a Gym Leader!"),,SPEAKER_SUMMER)
        closemessage
        applymovement(SUMMER, moves(walk_down, walk_left * 5, step_end))
        waitmovement(0)
        fadescreen(FADE_TO_BLACK)
        removeobject(SUMMER)
        removeobject(ALEKSANDER)
        msgbox("The next morning…")
        closemessage
        goto(KeiyingRaisonDetre_NewsStory_Script)
        end
}

script KeiyingRaisonDetre_NewsStory_Script {
    setobjectxy(CRYING_MAID, 44, 4)
        turnobject(CRYING_MAID, DIR_NORTH)
        turnobject(5, DIR_NORTH)
        setobjectnewmovementtype(CRYING_MAID, MOVEMENT_TYPE_FACE_UP)
        setobjectnewmovementtype(5, MOVEMENT_TYPE_FACE_UP)
        lockall
        fadescreen(FADE_FROM_BLACK)
        special(TurnOnTVScreen)
        delay(60)
        msgbox(format("And now we go to Da Lin, for more details about last night's riots. "),,SPEAKER_NEWS)
        msgbox(format("Thanks Ken. We're gathering details on the ground here, but it sounds like this riot was instigated by members of TheTide, culminating in violent attacks on the CapheCity Police Force. Both sides sustained significant injury, and dozens of members of TheTide were taken into custody last night. Back to you, Ken."),,SPEAKER_NEWS_B)
        msgbox(format("We're also learning that the Police Department released a press statement ten minutes ago, primarily addressing TheTide, asking for an end to the violence and begging them to “work with us, not against us”. We'll have more updates within the hour."),,SPEAKER_NEWS)
        closemessage
        special(TurnOffTVScreen)
        applymovement(4, moves(walk_right, face_down, step_end))
        waitmovement(0)

        msgbox(format("Is there anything else I can get you, Lord {PLAYER}?"),,SPEAKER_MAID)
        applymovement(PLAYER, Common_Movement_FaceUp)
        waitmovement(0)

        msgbox(format("Are you okay? What's wrong?"),MSGBOX_DEFAULT,SPEAKER_ALICIA)

        msgbox(format("I'm sorry. My… son is in the ICU after the riots last night. TheTide keeps getting impressionable young folk involved in their nonsense… I hope the city can get rid of them!"),,SPEAKER_MAID)
        closemessage
        applymovement(CRYING_MAID, moves(walk_up * 2, walk_faster_left * 8))
        waitmovement(0)
        removeobject(CRYING_MAID)
        removeobject(KEIYING)
        addvar(VAR_STORYLINE_STATE,1)
        setvar(VAR_KEIYING_RAISON_DETRE_STATE, POST_KEIYING_RAISON_DETRE)
        setvar(VAR_KEIYING_MANSION_STATE,FINISHED_KEIYING_RAISON) //PSF TODO replace with a flag
        call(TryAutoSave)
        endcutscene
        release
        end
}

script KeiyingRaisonDetre_PreventPlayerLeaving_Script {
    if (var(VAR_KEIYING_RAISON_DETRE_STATE) < POST_KEIYING_RAISON_DETRE){
        msgbox(format("Keiying has been so generous... I should stay."),MSGBOX_DEFAULT,SPEAKER_ALICIA,TAIL_THOUGHT)
            closemessage
            applymovement(PLAYER, Common_Movement_WalkUp)
            waitmovement(0)
    }
    release
        end
}

