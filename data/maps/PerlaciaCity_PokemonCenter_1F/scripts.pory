const LOCALID_NURSE = 1

mapscripts PerlaciaCity_PokemonCenter_1F_MapScripts{
    MAP_SCRIPT_ON_RESUME: CableClub_OnResume
    MAP_SCRIPT_ON_TRANSITION{
        setrespawn(HEAL_LOCATION_PERLACIA_CITY)
        end
    }
    MAP_SCRIPT_ON_LOAD{
        call(Quest_Restaurantexpansion_PerlaciaCity_HangPosterTile_Script)
    }
}

script PerlaciaCity_Pokemoncenter_1F_EventScript_Nurse{
	setvar(VAR_0x800B, LOCALID_NURSE)
	call(Common_EventScript_PkmnCenterNurse)
    call(Quest_Restaurantexpansion_Nurse_Question_Script)
	release
	end
}

script PerlaciaCity_Pokemoncenter_1F_EventScript_Clerk
{
	call(PokeMart_BeforeDialogue_EventScript)
	msgbox(format("Please speak to the Porygon if you'd like to purchase from the Presto Terminal."))
	goto(PokeMart_AfterDialogue_EventScript)
}
