
mapscripts CapheCity_GRUNTOffice_MapScripts{}

script CapheCity_TrolleyHQ_Manager_Quest_Script
{
    lock
    faceplayer
    goto_if_quest_complete(QUEST_ROCKCOLLECTOR,NULL)
    goto_if_quest_reward(QUEST_ROCKCOLLECTOR,NULL)
    goto_if_quest_active(QUEST_ROCKCOLLECTOR,NULL)

    callnative(Script_Quest_BetweenAStoneAndAHardPlace_ShouldStartRockCollector)
    if (var(VAR_RESULT))
    {
        goto(NULL)
    }

    goto_if_quest_complete(QUEST_BETWEENASTONEANDAHARDPLACE,Quest_BetweenAStoneAndAHardPlace_Dialogue_Complete)
    goto_if_quest_reward(QUEST_BETWEENASTONEANDAHARDPLACE,Quest_BetweenAStoneAndAHardPlace_Dialogue_Reward)
    goto_if_quest_active(QUEST_BETWEENASTONEANDAHARDPLACE,Quest_BetweenAStoneAndAHardPlace_Dialogue_Active)

    msgbox(format("Isn’t it amazing how all the trolleys run on time? It’s a tough challenge, but I love it! I just wish more got to see it…"),MSGBOX_NPC,SPEAKER_TROLLEYWORKER)
    closemessage
    release
    end
}

script CapheCity_TrolleyHQ_Interact_Clerk_Script{
    goto_if_quest_not_inactive(QUEST_FOODTRUCKBUREACRACY,Quest_Foodtruckbureaucracy_DOT_Active_Dialogue)
    goto(CapheCity_TrolleyHQ_Clerk_Dialogue)
}

script CapheCity_TrolleyHQ_Clerk_Dialogue{
    msgbox(format("I hate having to leave the office to get food... but ordering Rapidoordash is so expensive!"),MSGBOX_NPC,SPEAKER_ISIDORE)
    end
}

