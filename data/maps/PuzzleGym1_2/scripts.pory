mapscripts PuzzleGym1_2_MapScripts {}

script PuzzleGym1_2_StartPuzzle {
    lock
    special(SpawnCameraObject)
    applymovement(OBJ_EVENT_ID_CAMERA, Movement_PuzzleGym1_2_PanCameraToPuzzle)
	waitmovement(OBJ_EVENT_ID_CAMERA)
    special(RemoveCameraObject)
    applymovement(LOCALID_C1, Movement_PuzzleGym1_2_C1)
    applymovement(LOCALID_C2, Movement_PuzzleGym1_2_C2)
    applymovement(LOCALID_C3, Movement_PuzzleGym1_2_C3)
    applymovement(LOCALID_C4, Movement_PuzzleGym1_2_C4)
    applymovement(LOCALID_C5, Movement_PuzzleGym1_2_C5)
    applymovement(LOCALID_C6, Movement_PuzzleGym1_2_C6)
    applymovement(LOCALID_C7, Movement_PuzzleGym1_2_C7)
    applymovement(LOCALID_C8, Movement_PuzzleGym1_2_C8)
    waitmovement(LOCALID_C1)
    waitmovement(LOCALID_C2)
    waitmovement(LOCALID_C3)
    waitmovement(LOCALID_C4)
    waitmovement(LOCALID_C5)
    waitmovement(LOCALID_C6)
    waitmovement(LOCALID_C7)
    waitmovement(LOCALID_C8)
    special(SpawnCameraObject)
	applymovement(OBJ_EVENT_ID_CAMERA, Movement_PuzzleGym1_2_PanCameraToPlayer)
	waitmovement(OBJ_EVENT_ID_CAMERA)
	special(RemoveCameraObject)
    release
    end
}

movement Movement_PuzzleGym1_2_PanCameraToPuzzle {
    walk_up * 5
}

movement Movement_PuzzleGym1_2_PanCameraToPlayer {
    walk_down * 5
}

