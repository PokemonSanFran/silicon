    MAP_SCRIPT_ON_TRANSITION{
        setrespawn(HEAL_LOCATION_TIRABUDIN_PLACE)
        end
    }
    MAP_SCRIPT_ON_LOAD{
    call(Quest_Restaurantexpansion_TirabudinPlace_HangPosterTile_Script)
    }
}

script TirabudinPlace_Pokemoncenter_1F_EventScript_Nurse{
	setvar(VAR_0x800B, LOCALID_NURSE)
	call(Common_EventScript_PkmnCenterNurse)
    call(Quest_Restaurantexpansion_Nurse_Question_Script)
	release
	end
}

script TirabudinPlace_Pokemoncenter_1F_EventScript_Clerk{
    lock
    faceplayer
    call(Quest_Bodegaburnout_Script_HandleQuestDirection)
    msgbox(format("You know, the user interface that Presto uses is exactly the same as the kiosks as the Poké Marts. Did Presto just slap their logo on the same thing…?"),,SPEAKER_SHOPKEEPER)
    closemessage
    release
    end
}
