const LOCALID_NURSE = 1

mapscripts MermerezaCity_PokemonCenter_1F_MapScripts{
    MAP_SCRIPT_ON_RESUME: CableClub_OnResume
    MAP_SCRIPT_ON_TRANSITION{
        setrespawn(HEAL_LOCATION_MERMEREZA_CITY)
        end
    }
}

script MermerezaCity_Pokemoncenter_1F_EventScript_Nurse{
	setvar(VAR_0x800B, LOCALID_NURSE)
	call(Common_EventScript_PkmnCenterNurse)
	release
	end
}

script MermerezaCity_Pokemoncenter_1F_EventScript_Clerk{
    lock
    faceplayer
    call(Quest_Bodegaburnout_Script_HandleQuestDirection)
    msgbox(format("In eastern regions, Poké Marts are separate buildings from Pokémon Centers, but in western regions, they are the same building."),,SPEAKER_SHOPKEEPER)
    closemessage
    release
    end
}
